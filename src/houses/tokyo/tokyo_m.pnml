// Random Switches
	// Building Colours
		switch (FEAT_HOUSES, SELF, tokyo_m_build_clr_new, getbits(random_bits, 0, 3)) {
			0:	return 29;
			1:	return 30;
			2:	return 35;
			3:	return 36;
			4:	return 57;
			5:	return 58;
			6:	return 70;
				return 75;
		}
// Spritelayout Switches
	// a
		// 6L
			switch (FEAT_HOUSES,SELF, switch_tokyo_m_a_sprites, [
				STORE_TEMP(tokyo_m_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_tokyo_m_a_6L_snow; sprlay_tokyo_m_a_6L_norm; }

	// b
		// 6L
			switch (FEAT_HOUSES,SELF, switch_tokyo_m_b_sprites, [
				STORE_TEMP(tokyo_m_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_tokyo_m_b_6L_snow; sprlay_tokyo_m_b_6L_norm; }

	// Variant Selection for ['a', 'b'] using SpriteDirectionsAB()
	
	random_switch (FEAT_HOUSES, SELF, switch_tokyo_m_random_sprites) {
		1: switch_tokyo_m_a_sprites;
		1: switch_tokyo_m_b_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_tokyo_m_south_check, SpriteDirectionsSouth()) {
		4: switch_tokyo_m_a_sprites;
		6: switch_tokyo_m_a_sprites;
		9: switch_tokyo_m_b_sprites;
		switch_tokyo_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_tokyo_m_east_check, SpriteDirectionsEast()) {
		4: switch_tokyo_m_a_sprites;
		6: switch_tokyo_m_a_sprites;
		9: switch_tokyo_m_b_sprites;
		switch_tokyo_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_tokyo_m_west_check, SpriteDirectionsWest()) {
		6: switch_tokyo_m_b_sprites;
		9: switch_tokyo_m_a_sprites;
		switch_tokyo_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_tokyo_m_north_check, SpriteDirectionsNorth()) {
		6: switch_tokyo_m_b_sprites;
		9: switch_tokyo_m_a_sprites;
		switch_tokyo_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_tokyo_m_sprites, SpriteDirections() ) {
		1: switch_tokyo_m_a_sprites;
		2: switch_tokyo_m_b_sprites;
		3: switch_tokyo_m_south_check;
		4: switch_tokyo_m_a_sprites;
		5: switch_tokyo_m_a_sprites;
		6: switch_tokyo_m_west_check;
		8: switch_tokyo_m_b_sprites;
		9: switch_tokyo_m_east_check;
		10: switch_tokyo_m_b_sprites;
		12: switch_tokyo_m_north_check;
		switch_tokyo_m_random_sprites;
	}

