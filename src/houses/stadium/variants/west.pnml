
// stadium all colours

// _dark_green_
    // Norm Sprites
    spritelayout sprlay_stadium_west_xL_dark_green_norm {
        ground {
            sprite: spr_stadium_ground (1);
        }
        building {
            sprite: spr_stadium_xL_norm (1);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 6;
        }
    }

    // Snow Sprites
    spritelayout sprlay_stadium_west_xL_dark_green_snow {
        ground {
            sprite: spr_stadium_ground_snow (1);
        }
        building {
            sprite: spr_stadium_xL_snow (1);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 6;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_stadium_west_xL_dark_green_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_stadium_west_xL_dark_green_snow;
	    sprlay_stadium_west_xL_dark_green_norm;
    }
