// Spritelayouts
  spritelayout sprlay_pop_tiles {
    ground {sprite: spr_pop_tiles_ground;}
    building {sprite: spr_pop_tiles;}
  }

// Item Block
	item(FEAT_HOUSES, item_pop_tiles, 160, HOUSE_SIZE_1X1){
		property {
			substitute:					27;
			name:						string(STR_CONCAT_2, string(NAME_MORI),string(MEDIUM));
			population:					255;
			accepted_cargos:			[[PASS, 20],[MAIL, 10]];
			local_authority_impact:		0;
			removal_cost_multiplier:	0;
			probability:				0;
			years_available:			[0,0xFFFF];
			minimum_lifetime:			200;
			availability_mask:			[bitmask(TOWNZONE_CENTRE, TOWNZONE_INNER_SUBURB, TOWNZONE_OUTER_SUBURB), bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, ABOVE_SNOWLINE, CLIMATE_TROPIC)];
			building_class:				22;
			}
		graphics {
			default:					sprlay_pop_tiles;
			construction_check:			switch_small_con_check;
			cargo_production:			func_produce(50,10);
		}
	}
