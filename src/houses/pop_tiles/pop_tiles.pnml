
// pop_tiles

spriteset (spr_pop_tiles_1, 		"src/houses/pop_tiles/pop_tiles.png") 		{template_house_80(0,0)}
spriteset (spr_pop_tiles_2, 		"src/houses/pop_tiles/pop_tiles.png") 		{template_house_80(65,0)}
spriteset (spr_pop_tiles_3, 		"src/houses/pop_tiles/pop_tiles.png") 		{template_house_80(130,0)}
spriteset (spr_pop_tiles_4, 		"src/houses/pop_tiles/pop_tiles.png") 		{template_house_80(195,0)}
spriteset (spr_pop_tiles_ground, 	"src/houses/shrine/gfx/ground.png") 			{template_ground(0,0)}

random_switch(FEAT_HOUSES,SELF,spr_pop_tiles){
  1:spr_pop_tiles_1;
  1:spr_pop_tiles_2;
  1:spr_pop_tiles_3;
