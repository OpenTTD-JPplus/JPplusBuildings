
// _black_
    // Norm Sprites
    spritelayout sprlay_sugiyama_office_building_xL_black_norm {
        ground {
            sprite: spr_sugiyama_office_building_ground (3);
        }
        building {
            sprite: spr_sugiyama_office_building_xL_norm (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            yoffset: -1;
        }
    }

    // Snow Sprites
    spritelayout sprlay_sugiyama_office_building_xL_black_snow {
        ground {
            sprite: spr_sugiyama_office_building_ground_snow (3);
        }
        building {
            sprite: spr_sugiyama_office_building_xL_snow (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            yoffset: -1;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_sugiyama_office_building_xL_black_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_sugiyama_office_building_xL_black_snow;
	    sprlay_sugiyama_office_building_xL_black_norm;
    }

