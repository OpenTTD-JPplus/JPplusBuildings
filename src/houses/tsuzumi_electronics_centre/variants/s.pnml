
// tsuzumi_electronics_centre all colours

// _brown1_
    // Norm Sprites
    spritelayout sprlay_tsuzumi_electronics_centre_s_xL_brown1_norm {
        ground {
            sprite: spr_tsuzumi_electronics_centre_s_ground (construction_state);
        }
        building {
            sprite: spr_tsuzumi_electronics_centre_s_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 2;
            xoffset: 2;
        }
    }

    // Snow Sprites
    spritelayout sprlay_tsuzumi_electronics_centre_s_xL_brown1_snow {
        ground {
            sprite: spr_tsuzumi_electronics_centre_s_ground_snow (construction_state);
        }
        building {
            sprite: spr_tsuzumi_electronics_centre_s_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 2;
            xoffset: 2;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_tsuzumi_electronics_centre_s_xL_brown1_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_tsuzumi_electronics_centre_s_xL_brown1_snow;
	    sprlay_tsuzumi_electronics_centre_s_xL_brown1_norm;
    }
