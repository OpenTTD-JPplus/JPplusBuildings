
// police_station levels

// police_station all colours

// _light_blue_
    // Norm Sprites
    spritelayout sprlay_police_station_north_light_blue_norm {
        ground {
            sprite: spr_police_station_north_ground (construction_state);
        }
        building {
            sprite: spr_police_station_north_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 9;
        }
    }

    // Snow Sprites
    spritelayout sprlay_police_station_north_light_blue_snow {
        ground {
            sprite: spr_police_station_north_ground_snow (construction_state);
        }
        building {
            sprite: spr_police_station_north_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 9;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_police_station_north_light_blue_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_police_station_north_light_blue_snow;
	    sprlay_police_station_north_light_blue_norm;
    }
