
// nakasato all colours

// _grey_
    // Norm Sprites
    spritelayout sprlay_nakasato_xL_grey_norm {
        ground {
            sprite: spr_ground_grass (3);
        }
        building {
            sprite: spr_nakasato_xL_norm (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
        }
    }

    // Snow Sprites
    spritelayout sprlay_nakasato_xL_grey_snow {
        ground {
            sprite: spr_ground_grass (3);
        }
        building {
            sprite: spr_nakasato_xL_snow (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_nakasato_xL_grey_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_nakasato_xL_grey_snow;
	    sprlay_nakasato_xL_grey_norm;
    }
