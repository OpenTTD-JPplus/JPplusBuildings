	// b
		// 11L
			switch (FEAT_HOUSES,SELF, switch_shibuyat_l_b_sprites, [
				STORE_TEMP(shibuyat_l_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_shibuyat_l_b_11L_snow; sprlay_shibuyat_l_b_11L_norm; }

	// Variant Selection for ['a', 'b'] using SpriteDirectionsAB()
	
	random_switch (FEAT_HOUSES, SELF, switch_shibuyat_l_random_sprites) {
		1: switch_shibuyat_l_a_sprites;
		1: switch_shibuyat_l_b_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_shibuyat_l_south_check, SpriteDirectionsSouth()) {
		4: switch_shibuyat_l_a_sprites;
		6: switch_shibuyat_l_a_sprites;
		9: switch_shibuyat_l_b_sprites;
		switch_shibuyat_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_shibuyat_l_east_check, SpriteDirectionsEast()) {
		4: switch_shibuyat_l_a_sprites;
		6: switch_shibuyat_l_a_sprites;
		9: switch_shibuyat_l_b_sprites;
		switch_shibuyat_l_random_sprites;
