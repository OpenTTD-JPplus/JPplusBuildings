// Spritelayout Switches
	// a
		// 11L
			switch (FEAT_HOUSES,SELF, switch_shibuyat_l_a_sprites, [
				STORE_TEMP(shibuyat_l_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
