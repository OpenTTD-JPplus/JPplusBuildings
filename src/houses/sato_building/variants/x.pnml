
// sato_building all colours

// _black_
    // Norm Sprites
    spritelayout sprlay_sato_building_xL_black_norm {
        ground {
            sprite: spr_sato_building_ground (construction_state);
        }
        building {
            sprite: spr_sato_building_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 12;
        }
    }

    // Snow Sprites
    spritelayout sprlay_sato_building_xL_black_snow {
        ground {
            sprite: spr_sato_building_ground_snow (construction_state);
        }
        building {
            sprite: spr_sato_building_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 12;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_sato_building_xL_black_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_sato_building_xL_black_snow;
	    sprlay_sato_building_xL_black_norm;
    }
