
// temple all colours

// _grey_
    // Norm Sprites
    spritelayout sprlay_temple_north_xL_grey_norm {
        ground {
            sprite: spr_temple_ground (3);
        }
        building {
            sprite: spr_temple_xL_norm (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
            hide_sprite: 1;
        }
    }

    // Snow Sprites
    spritelayout sprlay_temple_north_xL_grey_snow {
        ground {
            sprite: spr_temple_ground_snow (3);
        }
        building {
            sprite: spr_temple_xL_snow (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
            hide_sprite: 1;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_temple_north_xL_grey_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_temple_north_xL_grey_snow;
	    sprlay_temple_north_xL_grey_norm;
    }
