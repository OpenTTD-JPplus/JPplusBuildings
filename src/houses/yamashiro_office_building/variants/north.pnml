
// _black_
    // Norm Sprites
    spritelayout sprlay_yamashiro_office_building_north_xL_black_norm {
        ground {
            sprite: spr_yamashiro_office_building_north_ground (construction_state);
        }
        building {
            sprite: spr_yamashiro_office_building_north_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            xoffset: 2;
            yoffset: 2;
        }
    }

    // Snow Sprites
    spritelayout sprlay_yamashiro_office_building_north_xL_black_snow {
        ground {
            sprite: spr_yamashiro_office_building_north_ground_snow (construction_state);
        }
        building {
            sprite: spr_yamashiro_office_building_north_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            xoffset: 2;
            yoffset: 2;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_yamashiro_office_building_north_xL_black_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_yamashiro_office_building_north_xL_black_snow;
	    sprlay_yamashiro_office_building_north_xL_black_norm;
    }

