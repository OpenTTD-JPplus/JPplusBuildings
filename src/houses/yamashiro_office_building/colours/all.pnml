
// yamashiro_office_building all colours

// _grey_
    // Norm Sprites
    spritelayout sprlay_yamashiro_office_building_v_xL_grey_norm {
        ground {
            sprite: spr_yamashiro_office_building_v_ground (_construction_state_);
        }
        building {
            sprite: spr_yamashiro_office_building_v_xL_norm (_construction_state_);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
            hide_sprite: _hide_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    // Snow Sprites
    spritelayout sprlay_yamashiro_office_building_v_xL_grey_snow {
        ground {
            sprite: spr_yamashiro_office_building_v_ground_snow (_construction_state_);
        }
        building {
            sprite: spr_yamashiro_office_building_v_xL_snow (_construction_state_);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
            hide_sprite: _hide_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_yamashiro_office_building_v_xL_grey_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_yamashiro_office_building_v_xL_grey_snow;
	    sprlay_yamashiro_office_building_v_xL_grey_norm;
    }
