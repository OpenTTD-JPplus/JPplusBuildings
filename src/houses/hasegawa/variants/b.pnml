
// hasegawa all colours

// _mix01_
    // Norm Sprites
    spritelayout sprlay_hasegawa_b_xL_mix01_norm {
        ground {
            sprite: spr_hasegawa_b_ground (3);
        }
        building {
            sprite: spr_hasegawa_b_xL_norm (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 17;
        }
    }

    // Snow Sprites
    spritelayout sprlay_hasegawa_b_xL_mix01_snow {
        ground {
            sprite: spr_hasegawa_b_ground_snow (3);
        }
        building {
            sprite: spr_hasegawa_b_xL_snow (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 17;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_hasegawa_b_xL_mix01_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_hasegawa_b_xL_mix01_snow;
	    sprlay_hasegawa_b_xL_mix01_norm;
    }
