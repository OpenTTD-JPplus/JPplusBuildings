	// Variant Selection for ['a', 'b', 's'] using SpriteDirectionsABS()
	
	random_switch (FEAT_HOUSES, SELF, switch_hasegawa_m_random_sprites) {
		1: switch_hasegawa_m_a_sprites;
		1: switch_hasegawa_m_b_sprites;
