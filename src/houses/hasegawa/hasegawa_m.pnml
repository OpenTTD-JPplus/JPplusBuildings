		8:  switch_hasegawa_m_b_sprites;
		9:  switch_hasegawa_m_east_check;
		10: switch_hasegawa_m_b_sprites;
		11: switch_hasegawa_m_b_sprites;
		12: switch_hasegawa_m_north_check;
		13: switch_hasegawa_m_a_sprites;
		14: switch_hasegawa_m_b_sprites;
		switch_hasegawa_m_random_sprites;
