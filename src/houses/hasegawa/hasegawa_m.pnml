Building	8		0		3		LOAD_TEMP(0)
Sign Var	4		1		2		LOAD_TEMP(7)
*/

// Random Switches
	// Building Colours
		switch (FEAT_HOUSES, SELF, hasegawa_m_build_clr_new, getbits(random_bits, 0, 3)) {
			0:	return 35;
			1:	return 36;
			2:	return 46;
			3:	return 48;
			4:	return 49;
			5:	return 65;
			6:	return 67;
				return 77;
		}
// Spritelayout Switches
	// a
		// 6L
			switch (FEAT_HOUSES,SELF, switch_hasegawa_m_a_sprites, [
				STORE_TEMP(hasegawa_m_build_clr_new(), 0),
				STORE_TEMP(getbits(random_bits, 1, 2), 7),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_hasegawa_m_a_6L_snow; sprlay_hasegawa_m_a_6L_norm; }

	// b
		// 6L
			switch (FEAT_HOUSES,SELF, switch_hasegawa_m_b_sprites, [
