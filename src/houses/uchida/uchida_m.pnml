/*
==================
Getbits Allocation
==================
Childsprites: {'signs': {'conditions': ['levels_share', '3only', 'remap', 'single_climate']}}

Colour Profiles: {'new': {'sum_prob': 4, 'count': 4}, 'signs': {'sum_prob': 4, 'count': 4}}
	âœ… new colour profile has 4 unique colours, with probabilities summing to 4
	âœ… signs colour profile has 4 unique colours, with probabilities summing to 4

Feature		Num		Start	Bits	Storage
------------------------------------------------------------------
Building	4		0		2		LOAD_TEMP(0)
Signs ðŸŽ¨	4		1		2		LOAD_TEMP(6)
*/

// Random Switches
	// Building Colours
		switch (FEAT_HOUSES, SELF, uchida_m_build_clr_new, getbits(random_bits, 0, 2)) {
			0:	return 45;
			1:	return 58;
			2:	return 70;
				return 77;
		}
	// Sign Colours
		switch (FEAT_HOUSES, SELF, uchida_m_signs_clr, getbits(random_bits, 1, 2)) {
			0:	return 88;
			1:	return 89;
			2:	return 90;
				return 91;
		}
// Spritelayout Switches
	// a
		// 6L
			switch (FEAT_HOUSES,SELF, switch_uchida_m_a_sprites, [
				STORE_TEMP(uchida_m_build_clr_new(), 0),
				STORE_TEMP(uchida_m_signs_clr(), 6),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_uchida_m_a_6L_snow; sprlay_uchida_m_a_6L_norm; }

	// b
		// 6L
			switch (FEAT_HOUSES,SELF, switch_uchida_m_b_sprites, [
				STORE_TEMP(uchida_m_build_clr_new(), 0),
				STORE_TEMP(uchida_m_signs_clr(), 6),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_uchida_m_b_6L_snow; sprlay_uchida_m_b_6L_norm; }

	// Variant Selection for ['a', 'b'] using SpriteDirectionsAB()
	
	random_switch (FEAT_HOUSES, SELF, switch_uchida_m_random_sprites) {
		1: switch_uchida_m_a_sprites;
		1: switch_uchida_m_b_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_uchida_m_south_check, SpriteDirectionsSouth()) {
		4: switch_uchida_m_a_sprites;
		6: switch_uchida_m_a_sprites;
		9: switch_uchida_m_b_sprites;
		switch_uchida_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_uchida_m_east_check, SpriteDirectionsEast()) {
		4: switch_uchida_m_a_sprites;
		6: switch_uchida_m_a_sprites;
		9: switch_uchida_m_b_sprites;
		switch_uchida_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_uchida_m_west_check, SpriteDirectionsWest()) {
		6: switch_uchida_m_b_sprites;
		9: switch_uchida_m_a_sprites;
		switch_uchida_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_uchida_m_north_check, SpriteDirectionsNorth()) {
		6: switch_uchida_m_b_sprites;
		9: switch_uchida_m_a_sprites;
		switch_uchida_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_uchida_m_sprites, SpriteDirections() ) {
		1: switch_uchida_m_a_sprites;
		2: switch_uchida_m_b_sprites;
		3: switch_uchida_m_south_check;
		4: switch_uchida_m_a_sprites;
		5: switch_uchida_m_a_sprites;
		6: switch_uchida_m_west_check;
		8: switch_uchida_m_b_sprites;
		9: switch_uchida_m_east_check;
		10: switch_uchida_m_b_sprites;
		12: switch_uchida_m_north_check;
		switch_uchida_m_random_sprites;
	}

