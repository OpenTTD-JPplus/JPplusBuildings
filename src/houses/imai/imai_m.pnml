// Spritelayout Switches
	// a
		// 6L
			switch (FEAT_HOUSES,SELF, switch_imai_m_a_sprites, [
				STORE_TEMP(imai_m_build_clr_new(), 0),
				STORE_TEMP(imai_m_roofs_new(), 4),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_imai_m_a_6L_snow; sprlay_imai_m_a_6L_norm; }

	// b
		// 6L
			switch (FEAT_HOUSES,SELF, switch_imai_m_b_sprites, [
				STORE_TEMP(imai_m_build_clr_new(), 0),
				STORE_TEMP(imai_m_roofs_new(), 4),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_imai_m_b_6L_snow; sprlay_imai_m_b_6L_norm; }

	// Variant Selection for ['a', 'b'] using SpriteDirectionsAB()
	
	random_switch (FEAT_HOUSES, SELF, switch_imai_m_random_sprites) {
		1: switch_imai_m_a_sprites;
		1: switch_imai_m_b_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_imai_m_south_check, SpriteDirectionsSouth()) {
		4: switch_imai_m_a_sprites;
		6: switch_imai_m_a_sprites;
		9: switch_imai_m_b_sprites;
		switch_imai_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_imai_m_east_check, SpriteDirectionsEast()) {
		4: switch_imai_m_a_sprites;
		6: switch_imai_m_a_sprites;
		9: switch_imai_m_b_sprites;
		switch_imai_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_imai_m_west_check, SpriteDirectionsWest()) {
		6: switch_imai_m_b_sprites;
		9: switch_imai_m_a_sprites;
		switch_imai_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_imai_m_north_check, SpriteDirectionsNorth()) {
		6: switch_imai_m_b_sprites;
		9: switch_imai_m_a_sprites;
		switch_imai_m_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_imai_m_sprites, SpriteDirections() ) {
		1: switch_imai_m_a_sprites;
		2: switch_imai_m_b_sprites;
		3: switch_imai_m_south_check;
		4: switch_imai_m_a_sprites;
		5: switch_imai_m_a_sprites;
		6: switch_imai_m_west_check;
		8: switch_imai_m_b_sprites;
		9: switch_imai_m_east_check;
		10: switch_imai_m_b_sprites;
		12: switch_imai_m_north_check;
		switch_imai_m_random_sprites;
	}

