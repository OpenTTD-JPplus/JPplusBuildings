// Spritelayout Switches
	// a
		// 8L
			switch (FEAT_HOUSES,SELF, switch_radiokaikan_l_a_sprites, [
				STORE_TEMP(radiokaikan_l_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_radiokaikan_l_a_8L_snow; sprlay_radiokaikan_l_a_8L_norm; }

	// b
		// 8L
			switch (FEAT_HOUSES,SELF, switch_radiokaikan_l_b_sprites, [
				STORE_TEMP(radiokaikan_l_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_radiokaikan_l_b_8L_snow; sprlay_radiokaikan_l_b_8L_norm; }

	// Variant Selection for ['a', 'b'] using SpriteDirectionsAB()
	
	random_switch (FEAT_HOUSES, SELF, switch_radiokaikan_l_random_sprites) {
		1: switch_radiokaikan_l_a_sprites;
		1: switch_radiokaikan_l_b_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_radiokaikan_l_south_check, SpriteDirectionsSouth()) {
		4: switch_radiokaikan_l_a_sprites;
		6: switch_radiokaikan_l_a_sprites;
		9: switch_radiokaikan_l_b_sprites;
		switch_radiokaikan_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_radiokaikan_l_east_check, SpriteDirectionsEast()) {
		4: switch_radiokaikan_l_a_sprites;
		6: switch_radiokaikan_l_a_sprites;
		9: switch_radiokaikan_l_b_sprites;
		switch_radiokaikan_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_radiokaikan_l_west_check, SpriteDirectionsWest()) {
		6: switch_radiokaikan_l_b_sprites;
		9: switch_radiokaikan_l_a_sprites;
		switch_radiokaikan_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_radiokaikan_l_north_check, SpriteDirectionsNorth()) {
		6: switch_radiokaikan_l_b_sprites;
		9: switch_radiokaikan_l_a_sprites;
		switch_radiokaikan_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_radiokaikan_l_sprites, SpriteDirections() ) {
		1: switch_radiokaikan_l_a_sprites;
		2: switch_radiokaikan_l_b_sprites;
		3: switch_radiokaikan_l_south_check;
		4: switch_radiokaikan_l_a_sprites;
		5: switch_radiokaikan_l_a_sprites;
		6: switch_radiokaikan_l_west_check;
		8: switch_radiokaikan_l_b_sprites;
		9: switch_radiokaikan_l_east_check;
		10: switch_radiokaikan_l_b_sprites;
		12: switch_radiokaikan_l_north_check;
		switch_radiokaikan_l_random_sprites;
	}

