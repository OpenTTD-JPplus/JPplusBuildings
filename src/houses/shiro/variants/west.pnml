
// shiro all colours

// _grey_
    // Norm Sprites
    spritelayout sprlay_shiro_west_xL_grey_norm {
        ground {
            sprite: spr_ground_shiro (0);
        }
        building {
            sprite: spr_shiro_xL_norm (0);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
        }
    }

    // Snow Sprites
    spritelayout sprlay_shiro_west_xL_grey_snow {
        ground {
            sprite: spr_ground_shiro (0);
        }
        building {
            sprite: spr_shiro_xL_snow (0);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 1;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_shiro_west_xL_grey_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_shiro_west_xL_grey_snow;
	    sprlay_shiro_west_xL_grey_norm;
    }
