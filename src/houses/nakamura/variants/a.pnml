
// nakamura all colours

// _midgrey_
    // Norm Sprites
    spritelayout sprlay_nakamura_a_xL_midgrey_norm {
        ground {
            sprite: spr_nakamura_a_ground (3);
        }
        building {
            sprite: spr_nakamura_a_xL_norm (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 16;
        }
    }

    // Snow Sprites
    spritelayout sprlay_nakamura_a_xL_midgrey_snow {
        ground {
            sprite: spr_nakamura_a_ground_snow (3);
        }
        building {
            sprite: spr_nakamura_a_xL_snow (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 16;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_nakamura_a_xL_midgrey_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_nakamura_a_xL_midgrey_snow;
	    sprlay_nakamura_a_xL_midgrey_norm;
    }
