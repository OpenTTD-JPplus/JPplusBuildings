
// takagi all colours

// _white_
    // Norm Sprites
    spritelayout sprlay_takagi_xL_white_norm {
        ground {
            sprite: spr_takagi_ground (construction_state);
        }
        building {
            sprite: spr_takagi_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 0;
        }
    }

    // Snow Sprites
    spritelayout sprlay_takagi_xL_white_snow {
        ground {
            sprite: spr_takagi_ground_snow (construction_state);
        }
        building {
            sprite: spr_takagi_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 0;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_takagi_xL_white_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_takagi_xL_white_snow;
	    sprlay_takagi_xL_white_norm;
    }
