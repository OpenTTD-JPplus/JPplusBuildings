
// kuroi_tower all colours

// _dark_green_
    // Norm Sprites
    spritelayout sprlay_kuroi_tower_xL_dark_green_norm {
        ground {
            sprite: spr_kuroi_tower_ground (3);
        }
        building {
            sprite: spr_kuroi_tower_xL_norm (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 6;
        }
    }

    // Snow Sprites
    spritelayout sprlay_kuroi_tower_xL_dark_green_snow {
        ground {
            sprite: spr_kuroi_tower_ground_snow (3);
        }
        building {
            sprite: spr_kuroi_tower_xL_snow (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 6;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_kuroi_tower_xL_dark_green_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_kuroi_tower_xL_dark_green_snow;
	    sprlay_kuroi_tower_xL_dark_green_norm;
    }
