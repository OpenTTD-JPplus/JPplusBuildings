
// harada all colours

// _white_
    // Norm Sprites
    spritelayout sprlay_harada_xL_white_norm {
        ground {
            sprite: spr_harada_ground (construction_state);
        }
        building {
            sprite: spr_harada_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 0;
        }
    }

    // Snow Sprites
    spritelayout sprlay_harada_xL_white_snow {
        ground {
            sprite: spr_harada_ground_snow (construction_state);
        }
        building {
            sprite: spr_harada_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 0;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_harada_xL_white_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_harada_xL_white_snow;
	    sprlay_harada_xL_white_norm;
    }
