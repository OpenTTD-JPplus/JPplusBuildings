
// petrol_station_large levels

// petrol_station_large all colours

// _light_blue_
    // Norm Sprites
    spritelayout sprlay_petrol_station_large_north_light_blue_norm {
        ground {
            sprite: spr_petrol_station_large_ground (0);
        }
        building {
            sprite: spr_petrol_station_large_norm (0);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 9;
        }
    }

    // Snow Sprites
    spritelayout sprlay_petrol_station_large_north_light_blue_snow {
        ground {
            sprite: spr_petrol_station_large_ground (0);
        }
        building {
            sprite: spr_petrol_station_large_snow (0);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 9;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_petrol_station_large_north_light_blue_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_petrol_station_large_north_light_blue_snow;
	    sprlay_petrol_station_large_north_light_blue_norm;
    }
