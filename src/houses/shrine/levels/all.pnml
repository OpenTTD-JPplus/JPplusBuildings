
// _black_
    // Norm Sprites
    spritelayout sprlay_shrine_p_black_norm {
        ground {
            sprite: spr_shrine_ground (3);
        }
        building {
            sprite: spr_shrine_p_norm (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
        }
    }

    // Snow Sprites
    spritelayout sprlay_shrine_p_black_snow {
        ground {
            sprite: spr_shrine_ground_snow (3);
        }
        building {
            sprite: spr_shrine_p_snow (3);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_shrine_p_black_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_shrine_p_black_snow;
	    sprlay_shrine_p_black_norm;
    }

