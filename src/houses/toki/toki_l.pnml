// Random Switches
	// Building Colours
		switch (FEAT_HOUSES, SELF, toki_l_build_clr_new, getbits(random_bits, 0, 3)) {
			0:	return 23;
			1:	return 30;
			2:	return 32;
			3:	return 44;
			4:	return 50;
			5:	return 59;
			6:	return 69;
				return 81;
		}
// Spritelayout Switches
	// a
		// 8L
			switch (FEAT_HOUSES,SELF, switch_toki_l_a_sprites, [
				STORE_TEMP(toki_l_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_toki_l_a_8L_snow; sprlay_toki_l_a_8L_norm; }

	// b
		// 8L
			switch (FEAT_HOUSES,SELF, switch_toki_l_b_sprites, [
				STORE_TEMP(toki_l_build_clr_new(), 0),
				terrain_type == TILETYPE_SNOW]) 
				{1: sprlay_toki_l_b_8L_snow; sprlay_toki_l_b_8L_norm; }

	// Variant Selection for ['a', 'b'] using SpriteDirectionsAB()
	
	random_switch (FEAT_HOUSES, SELF, switch_toki_l_random_sprites) {
		1: switch_toki_l_a_sprites;
		1: switch_toki_l_b_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_toki_l_south_check, SpriteDirectionsSouth()) {
		4: switch_toki_l_a_sprites;
		6: switch_toki_l_a_sprites;
		9: switch_toki_l_b_sprites;
		switch_toki_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_toki_l_east_check, SpriteDirectionsEast()) {
		4: switch_toki_l_a_sprites;
		6: switch_toki_l_a_sprites;
		9: switch_toki_l_b_sprites;
		switch_toki_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_toki_l_west_check, SpriteDirectionsWest()) {
		6: switch_toki_l_b_sprites;
		9: switch_toki_l_a_sprites;
		switch_toki_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_toki_l_north_check, SpriteDirectionsNorth()) {
		6: switch_toki_l_b_sprites;
		9: switch_toki_l_a_sprites;
		switch_toki_l_random_sprites;
	}

	switch (FEAT_HOUSES, SELF, switch_toki_l_sprites, SpriteDirections() ) {
		1: switch_toki_l_a_sprites;
		2: switch_toki_l_b_sprites;
		3: switch_toki_l_south_check;
		4: switch_toki_l_a_sprites;
		5: switch_toki_l_a_sprites;
		6: switch_toki_l_west_check;
		8: switch_toki_l_b_sprites;
		9: switch_toki_l_east_check;
		10: switch_toki_l_b_sprites;
		12: switch_toki_l_north_check;
		switch_toki_l_random_sprites;
	}

