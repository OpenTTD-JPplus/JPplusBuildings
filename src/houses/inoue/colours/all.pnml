
// inoue all colours

// _half01_
    // Norm Sprites
    spritelayout sprlay_inoue_v_xL_half01_norm {
        ground {
            sprite: spr_inoue_v_ground (_construction_state_);
        }
        building {
            sprite: spr_inoue_v_xL_norm (_construction_state_);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 21;
            hide_sprite: _hide_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    // Snow Sprites
    spritelayout sprlay_inoue_v_xL_half01_snow {
        ground {
            sprite: spr_inoue_v_ground_snow (_construction_state_);
        }
        building {
            sprite: spr_inoue_v_xL_snow (_construction_state_);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 21;
            hide_sprite: _hide_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_inoue_v_xL_half01_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_inoue_v_xL_half01_snow;
	    sprlay_inoue_v_xL_half01_norm;
    }
